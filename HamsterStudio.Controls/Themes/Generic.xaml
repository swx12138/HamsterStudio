<!--  在 Themes/Generic.xaml 中  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:HamsterStudio.Controls">

    <Style TargetType="{x:Type local:ZoomableImage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ZoomableImage}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <!--  显示缩放比例  -->
                            <Border x:Name="ZoomInfoPanel"
                                    Margin="5"
                                    Padding="4,2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="#80000000"
                                    CornerRadius="4"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="ZoomInfoText" FontSize="12" Foreground="White" />
                            </Border>

                            <!--  控制按钮  -->
                            <StackPanel Margin="10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Orientation="Horizontal">
                                <Button x:Name="ZoomInButton"
                                        Width="30"
                                        Height="30"
                                        Margin="2"
                                        Command="{x:Static local:ZoomableImage.ZoomInCommand}"
                                        Content="+"
                                        FontSize="16" />
                                <Button x:Name="ZoomOutButton"
                                        Width="30"
                                        Height="30"
                                        Margin="2"
                                        Command="{x:Static local:ZoomableImage.ZoomOutCommand}"
                                        Content="-"
                                        FontSize="16" />
                                <Button x:Name="ResetButton"
                                        Width="30"
                                        Height="30"
                                        Margin="2"
                                        Command="{x:Static local:ZoomableImage.ResetViewCommand}"
                                        Content="↺"
                                        FontSize="16" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!--  鼠标悬停时显示控制按钮  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ZoomInfoPanel" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="Focusable" Value="True" />
    </Style>

</ResourceDictionary>