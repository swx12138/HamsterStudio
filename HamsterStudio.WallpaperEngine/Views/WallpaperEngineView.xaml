<UserControl x:Class="HamsterStudio.WallpaperEngine.Views.WallpaperEngineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:hcu="clr-namespace:HamsterStudio.HandyUtil.DragDrop;assembly=HamsterStudio.HandyUtil"
             xmlns:local="clr-namespace:HamsterStudio.WallpaperEngine.Views"
             xmlns:localb="clr-namespace:HamsterStudio.WallpaperEngine.Behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tkc="clr-namespace:HamsterStudio.Toolkits.Converters;assembly=HamsterStudio.Toolkits"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!--<Style x:Key="DropZoneStyle" TargetType="Border">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="CornerRadius" Value="5" />
            <Style.Triggers>
                <Trigger Property="tk:DragDropHelper.IsDragOver" Value="True">
                    <Setter Property="Background" Value="LightBlue" />
                    <Setter Property="BorderBrush" Value="Blue" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>-->

        <tkc:PathToImageSource x:Key="PathToPreviewImageSource" DecodeWidth="200" />
        <tkc:PathToImageSource x:Key="PathToImageSource" />

        <DataTemplate x:Key="ItemTemplate">
            <Border Margin="2"
                    Padding="10"
                    Background="LightGreen"
                    CornerRadius="3">
                <TextBlock FontWeight="Bold" Text="{Binding Name}" />
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ImageModelDimFilterTempl" DataType="localm:ImageModelDimFilter">
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="CheckBox">
                        <Setter Property="Margin" Value="0,0,8,3" />
                    </Style>
                </StackPanel.Resources>
                <CheckBox Content="只要4K" IsChecked="{Binding Is4kOnly}" />
                <CheckBox Content="只看竖屏" IsChecked="{Binding IsVerticalOnly}" />
                <CheckBox Content="只看横图" IsChecked="{Binding IsHorizontalOnly}" />
                <CheckBox Content="已收藏" IsChecked="{Binding IsMarkedOnly}" />
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>

    <DockPanel>
        <!--  屏幕选择下拉列表  -->
        <Border Margin="1"
                BorderBrush="{Binding ThemeMgmt.BodyBorderColor}"
                BorderThickness="1"
                CornerRadius="3"
                DockPanel.Dock="Top">
            <ComboBox x:Name="cbMonitors" ItemsSource="{Binding Configuration.MonitorIds}" SelectedIndex="1">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding MonitorId}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Border>

        <!--  待选壁纸列表  -->
        <GroupBox Width="500"
                  Margin="1"
                  BorderBrush="{Binding ThemeMgmt.BodyBorderColor}"
                  BorderThickness="1"
                  DockPanel.Dock="Left">
            <GroupBox.Header>
                <TextBlock>
                    <Run Text="待选壁纸列表 [" />
                    <TextBlock Text="{Binding Configuration.FilteredAlternateWallpappersView.Count}" />
                    <Run Text="]" />
                </TextBlock>
            </GroupBox.Header>

            <!--  左侧壁纸列表  -->
            <DockPanel DataContext="{Binding Configuration}">
                <hc:Interaction.Behaviors>
                    <hcu:DragDropBehavior />
                </hc:Interaction.Behaviors>
                <ContentPresenter Content="{Binding AlternateWallpappersFilter}" ContentTemplate="{StaticResource ImageModelDimFilterTempl}" DockPanel.Dock="Top" />
                <CheckBox Content="收藏优先" DockPanel.Dock="Top" IsChecked="{Binding IsMarkedFirst}" />
                <Button Command="{Binding LoadMoreImagesCommand}" Content="添加..." DockPanel.Dock="Top" />

                <ListView ItemsSource="{Binding FilteredAlternateWallpappersView}" VirtualizingPanel.IsVirtualizing="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ListViewItem>
                                <Grid>
                                    <Grid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Command="{Binding RevalInExplorerCommand}" Header="在文件资源管理器中打开..." />
                                            <MenuItem Command="{Binding RemoveImageCommand}" CommandParameter="{Binding}" Header="从备选列表中移除" />
                                        </ContextMenu>
                                    </Grid.ContextMenu>
                                    <hc:Interaction.Behaviors>
                                        <hcu:DragBehavior />
                                    </hc:Interaction.Behaviors>
                                    <Image Height="300"
                                           HorizontalAlignment="Left"
                                           Source="{Binding Path, Converter={StaticResource PathToPreviewImageSource}}"
                                           Stretch="Uniform" />
                                    <Rectangle Height="50"
                                               VerticalAlignment="Top"
                                               Fill="AliceBlue"
                                               Opacity="0.5" />
                                    <DockPanel LastChildFill="False">
                                        <TextBlock DockPanel.Dock="Top" Text="{Binding FileName}" TextWrapping="Wrap" />
                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                            <TextBlock Text="{Binding MetaInfo.Width}" />
                                            <TextBlock Text="*" />
                                            <TextBlock Text="{Binding MetaInfo.Height}" />
                                        </StackPanel>
                                        <CheckBox Content="收藏" DockPanel.Dock="Top" IsChecked="{Binding Mark}" />
                                    </DockPanel>
                                </Grid>
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <!--<ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="tk:DragDropHelper.IsDragSource" Value="True" />
                                <Setter Property="Margin" Value="2" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>-->
                </ListView>
            </DockPanel>

        </GroupBox>

        <!--  当前壁纸预览  -->
        <Border Margin="1"
                BorderBrush="{Binding ThemeMgmt.BodyBorderColor}"
                BorderThickness="1"
                CornerRadius="3">
            <DockPanel DataContext="{Binding SelectedItem, ElementName=cbMonitors}" IsManipulationEnabled="True">
                <TextBlock DockPanel.Dock="Top" Text="{Binding CurrentWallpaper}" />
                <ContentPresenter Content="{Binding Filter}" ContentTemplate="{StaticResource ImageModelDimFilterTempl}" DockPanel.Dock="Top" />
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="5,0" />
                            <Setter Property="TextDecorations" Value="Baseline" />
                        </Style>
                    </StackPanel.Resources>
                    <CheckBox Content="自动切换" IsChecked="{Binding AutoChangeWallpaper}" />
                    <TextBlock Background="YellowGreen" Text="{Binding LastUpdateTime, StringFormat=上次更新:[yyyy-MM-dd HH:mm:ss]}" />
                    <TextBlock Background="GreenYellow" Text="{Binding NextUpdateTime, StringFormat=下次更新:[yyyy-MM-dd HH:mm:ss]}" />
                </StackPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <hc:NumericUpDown Margin="3,0" Value="{Binding DispatcherTimerInterval, UpdateSourceTrigger=LostFocus}" />
                    <Button Margin="3,0" Command="{Binding RequestNewWallpapperCommand}" Content="立即切换" />
                </StackPanel>

                <Image Source="{Binding CurrentWallpaper, Converter={StaticResource PathToImageSource}}">
                    <hc:Interaction.Behaviors>
                        <localb:ImageModelDimDropBehavior />
                    </hc:Interaction.Behaviors>
                </Image>
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>
