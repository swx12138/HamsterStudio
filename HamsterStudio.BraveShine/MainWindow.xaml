<Window x:Class="HamsterStudio.BraveShine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:HamsterStudio.BraveShine.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:HamsterStudio.BraveShine"
        xmlns:localvm="clr-namespace:HamsterStudio.BraveShine.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Bravo"
        Width="1920"
        Height="960"
        Topmost="{Binding Topmost}"
        mc:Ignorable="d">
    <Window.DataContext>
        <localvm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <converters:WatchLaterSelector x:Key="WatchLaterSelector" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Margin="1" BorderBrush="Pink" BorderThickness="1">
            <MenuItem Header="File">
                <MenuItem Command="{Binding SaveCoverCommand}" Header="Save Cover" InputGestureText="Ctrl+Shift+S" />
                <MenuItem Command="{Binding SaveOwnerFaceCommand}" Header="Save Avatar" InputGestureText="Ctrl+A" />
                <Separator />
                <MenuItem Header="Current Page">
                    <MenuItem Command="{Binding SaveFirstFrameCommand}" CommandParameter="{Binding SelectedContent, ElementName=pagesTab}" Header="Save Cover" InputGestureText="Ctrl+Alt+S" />
                    <MenuItem Command="{Binding SaveVideoCommand}" CommandParameter="{Binding SelectedIndex, ElementName=pagesTab}" Header="Save Video" InputGestureText="Ctrl+S" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Command="{Binding LoadWatchLaterCommand}" Header="Load Watch Later" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Topmost" IsCheckable="True" IsChecked="{Binding Topmost}" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="2"
                    Margin="1"
                    Background="#eeffee"
                    BorderBrush="Pink"
                    BorderThickness="1"
                    CornerRadius="5">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{Binding WatchLaters, Converter={StaticResource WatchLaterSelector}}" SelectedItem="{Binding Location}" />
                        <Button Grid.Column="1" Command="{Binding RedirectLocationCommand}" Content="Load" />
                    </Grid>
                    <hc:PropertyGrid Margin="0,-5,0,0" Background="Transparent" SelectedObject="{Binding VideoInfo.Owner}" />
                    <hc:PropertyGrid Margin="0,-55,0,0" Panel.ZIndex="-1" Background="Transparent" SelectedObject="{Binding VideoInfo}" />
                </StackPanel>
            </Border>
            <Border Grid.Column="1"
                    Margin="1"
                    Background="LightSkyBlue"
                    BorderBrush="Pink"
                    BorderThickness="1"
                    CornerRadius="5"
                    DataContext="{Binding VideoInfo}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Margin="5" Source="{Binding Pic}" />
                    <hc:PropertyGrid Grid.Column="1" Background="Transparent" SelectedObject="{Binding Stat}" />
                </Grid>
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Margin="1"
                    Background="#eeffee"
                    BorderBrush="Pink"
                    BorderThickness="1"
                    CornerRadius="5"
                    DataContext="{Binding VideoInfo}">
                <TabControl Name="pagesTab" ItemsSource="{Binding Pages}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Part}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <hc:PropertyGrid SelectedObject="{Binding}" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
