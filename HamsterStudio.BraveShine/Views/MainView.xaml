<UserControl
    x:Class="HamsterStudio.BraveShine.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:HamsterStudio.BraveShine.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:HamsterStudio.BraveShine"
    xmlns:localvm="clr-namespace:HamsterStudio.BraveShine.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Height="960"
    d:Width="1920"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <localvm:MainViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <converters:WatchLaterSelector x:Key="WatchLaterSelector" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu
            Grid.ColumnSpan="2"
            Margin="1"
            BorderBrush="Pink"
            BorderThickness="1">
            <MenuItem Header="File">
                <MenuItem
                    Command="{Binding SaveCoverCommand}"
                    Header="Save Cover"
                    InputGestureText="Ctrl+Shift+S" />
                <MenuItem
                    Command="{Binding SaveOwnerFaceCommand}"
                    Header="Save Avatar"
                    InputGestureText="Ctrl+A" />
                <Separator />
                <MenuItem Header="Current Page">
                    <MenuItem
                        Command="{Binding SaveFirstFrameCommand}"
                        CommandParameter="{Binding SelectedContent, ElementName=pagesTab}"
                        Header="Save Cover"
                        InputGestureText="Ctrl+Alt+S" />
                    <MenuItem
                        Command="{Binding SaveVideoCommand}"
                        CommandParameter="{Binding SelectedIndex, ElementName=pagesTab}"
                        Header="Save Video"
                        InputGestureText="Ctrl+S" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Command="{Binding LoadWatchLaterCommand}" Header="Load Watch Later" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem
                    Header="Topmost"
                    IsCheckable="True"
                    IsChecked="{Binding Topmost}" />
            </MenuItem>
        </Menu>

        <!--  主体  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="Margin" Value="1" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="Pink" />
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Grid.Resources>

            <!--  封面区域  -->
            <Border Background="#eeeeff" DataContext="{Binding VideoInfo}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="10,2"
                        FontSize="20"
                        Text="{Binding Title}" />
                    <Image
                        Grid.Row="1"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Source="{Binding Pic}" />
                    <TextBlock
                        Grid.Row="2"
                        Margin="10,2"
                        FontSize="20"
                        Text="{Binding Desc}" />
                    <Border
                        Grid.RowSpan="3"
                        Grid.Column="1"
                        Margin="1"
                        BorderBrush="Pink"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="5" />
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="{Binding Stat.View, StringFormat='观看：{0}'}" />
                            <TextBlock Text="{Binding Stat.Like, StringFormat='点赞：{0}'}" />
                            <TextBlock Text="{Binding Stat.Coin, StringFormat='投币：{0}'}" />
                            <TextBlock Text="{Binding Stat.Favorite, StringFormat='收藏：{0}'}" />
                            <TextBlock Text="{Binding Stat.Reply, StringFormat='评论：{0}'}" />
                            <TextBlock Text="{Binding Stat.Danmaku, StringFormat='弹幕：{0}'}" />
                            <TextBlock Text="{Binding Stat.Share, StringFormat='分项：{0}'}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!--  分P详细  -->
            <Border
                Grid.Row="1"
                Background="#ffeeee"
                DataContext="{Binding VideoInfo}">
                <TabControl
                    Name="pagesTab"
                    Background="Transparent"
                    ItemsSource="{Binding Pages}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Part}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Image Source="{Binding FirstFrame}" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Border>

            <!--  导航及作者信息  -->
            <Border Grid.Column="1" Background="#eeffee">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            ItemsSource="{Binding QuickList}"
                            SelectedItem="{Binding Location}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Image MaxHeight="64" Source="{Binding Cover}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{Binding Title}"
                                            ToolTip="{Binding Bvid}" />
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBox Text="{Binding Location.Bvid}" />
                        <Button
                            Grid.Column="1"
                            Command="{Binding RedirectLocationCommand}"
                            Content="Load" />
                        <Button
                            Grid.Column="2"
                            Command="{Binding SelectVideoCommad}"
                            Content="Select" />
                    </Grid>
                    <hc:PropertyGrid
                        Margin="0,-5,0,0"
                        Background="Transparent"
                        SelectedObject="{Binding VideoInfo.Owner}" />
                </StackPanel>
            </Border>

            <!--  日志  -->
            <Border
                Grid.Row="1"
                Grid.Column="2"
                Background="LightGoldenrodYellow"
                SourceUpdated="Border_SourceUpdated">
                <DataGrid
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    GridLinesVisibility="All"
                    IsReadOnly="True"
                    ItemsSource="{Binding NlogTarget.LogEntries}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding TimeStamp}" Header="TimeStamp" />
                        <DataGridTextColumn Binding="{Binding Level}" Header="Level" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Message}"
                            Header="Message" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

        </Grid>

        <StatusBar
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="2,2,2,0"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Right"
            Background="Beige"
            BorderBrush="Pink"
            BorderThickness="1">
            <Button Command="{Binding SaveCoverCommand}" Content="Download Cover" />
            <Button Command="{Binding SaveOwnerFaceCommand}" Content="Download Avatar" />
            <Button
                Command="{Binding SaveFirstFrameCommand}"
                CommandParameter="{Binding SelectedContent, ElementName=pagesTab}"
                Content="Download First frame" />
            <Button
                Command="{Binding SaveVideoCommand}"
                CommandParameter="{Binding SelectedIndex, ElementName=pagesTab}"
                Content="Download Video" />
        </StatusBar>
    </Grid>
</UserControl>
