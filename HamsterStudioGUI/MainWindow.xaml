<Window x:Class="HamsterStudioGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:HamsterStudioGUI.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gv="clr-namespace:HamsterStudio.Gallery.Views;assembly=HamsterStudio.Gallery"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:hsit="clr-namespace:HamsterStudio.ImageTool.Views;assembly=HamsterStudio.ImageTool"
        xmlns:hstc="clr-namespace:HamsterStudio.Toolkits.Converters;assembly=HamsterStudio.Toolkits"
        xmlns:local="clr-namespace:HamsterStudioGUI"
        xmlns:localv="clr-namespace:HamsterStudioGUI.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wev="clr-namespace:HamsterStudio.WallpaperEngine.Views;assembly=HamsterStudio.WallpaperEngine"
        Title="{Binding Title}"
        Width="1920"
        Height="1280"
        Closed="Window_Closed"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowModel />
    </Window.DataContext>
    <Window.Resources>
        <converters:WatchLaterSelector x:Key="WatchLaterSelector" />
    </Window.Resources>
    <TabControl TabStripPlacement="Left">
        <!--<TabItem Header="主界面">
            <DockPanel>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBlock FontSize="32" Text="Hello，" />
                    <TextBlock FontSize="32" Text="{Binding UserName}" />
                    <TextBlock FontSize="32" Text="。" />
                </StackPanel>
                <UniformGrid>
                    <hc:ColorPicker SelectedBrush="{Binding ThemeMgmt.BodyBorderColor}" />
                </UniformGrid>
            </DockPanel>
        </TabItem>-->

        <TabItem Header="服务">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <Border Margin="3"
                        VerticalAlignment="Stretch"
                        BorderBrush="{Binding ThemeMgmt.BodyBorderColor}"
                        BorderThickness="1"
                        CornerRadius="5">
                    <TabControl>
                        <TabItem Header="Home">
                            <localv:MainView DataContext="{Binding MainViewModel}" />
                        </TabItem>
                        <TabItem Header="特殊下载">
                            <localv:SpacialDownloadsView DataContext="{Binding SpacialDownloadsViewModel}" />
                        </TabItem>
                    </TabControl>
                </Border>

                <!--  日志  -->
                <Border Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="3"
                        Padding="3"
                        Background="{Binding ThemeMgmt.FooterBackgroundColor}"
                        BorderBrush="{Binding ThemeMgmt.BodyBorderColor}"
                        BorderThickness="1"
                        CornerRadius="5">
                    <Border.Resources>
                        <hstc:DateTimeStringyConverter x:Key="hstcDateTimeStringyConverter" />
                    </Border.Resources>
                    <DataGrid xmlns:i="https://handyorg.github.io/handycontrol"
                              xmlns:localbh="clr-namespace:HamsterStudioGUI.Behaviors"
                              AutoGenerateColumns="False"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              BorderThickness="0"
                              GridLinesVisibility="All"
                              IsReadOnly="True"
                              ItemsSource="{Binding LogViewModel.LogsView}">
                        <i:Interaction.Behaviors>
                            <localbh:AutoScrollBehavior />
                        </i:Interaction.Behaviors>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Timestamp, Converter={StaticResource hstcDateTimeStringyConverter}}" Header="TimeStamp" />
                            <DataGridTextColumn Binding="{Binding Level}" Header="Level" />
                            <DataGridTextColumn Width="*" Binding="{Binding Message}" Header="Message" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

            </Grid>
        </TabItem>

        <TabItem Header="{Binding WallpaperEngineViewModel.DisplayName}">
            <wev:WallpaperEngineView DataContext="{Binding WallpaperEngineViewModel}" />
        </TabItem>

        <TabItem Header="{Binding GalleryViewModel.DisplayName}">
            <gv:GalleryView DataContext="{Binding GalleryViewModel}" />
        </TabItem>

        <TabItem Header="{Binding ExposureAdjustmentViewModel.DisplayName}">
            <hsit:ExposureAdjustmentView DataContext="{Binding ExposureAdjustmentViewModel}" />
        </TabItem>

    </TabControl>

</Window>
