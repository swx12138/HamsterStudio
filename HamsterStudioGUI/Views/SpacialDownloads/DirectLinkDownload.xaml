<UserControl x:Class="HamsterStudioGUI.Views.SpacialDownloads.DirectLinkDownload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HamsterStudioGUI.Views.SpacialDownloads"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <DockPanel>
            <TextBlock VerticalAlignment="Center" Text="链接：   " />
            <TextBox Text="{Binding Url}" />
        </DockPanel>
        <DockPanel>
            <TextBlock VerticalAlignment="Center" Text="文件名：" />
            <TextBox Text="{Binding FileName}" />
        </DockPanel>
        <Button Margin="8" Command="{Binding DownloadCommand}" Content="下载" />
    </StackPanel>
</UserControl>
